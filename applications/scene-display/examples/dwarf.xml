<?xml version="1.0" encoding="UTF-8" ?>

<!-- Framebuffer Objects -->
<fbo id="g-buffer" size-mode="rel" size="1.0,1.0" >
  <texture id="diffuse0"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="diffuse1"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="specular"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="normal"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <depth id="depth" pixel-size="24" />
</fbo>
<fbo id="reflection-buffer" size-mode="rel" size="0.75,0.75" >
  <texture id="diffuse0"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="diffuse1"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="specular"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <texture id="normal"
	   pixel-type="UNSIGNED_BYTE"
	   pixel-size="16"
	   pixel-components="4" />
  <depth id="depth" pixel-size="24" />
</fbo>
<!-- Textures -->
<texture id="regen-logo" file="res/logo.png" />
<texture id="ground-color" file="res/textures/brick/color.jpg" />
<texture id="ground-normal" file="res/textures/brick/normal.jpg" />
<texture id="ground-height" file="res/textures/brick/height.jpg" />
<texture id="reflector-noise" noise="perlin" size="128.0,128.0,1.0"
	 baseFrequency="4.0" persistence= "0.5" lacunarity="2.5" octaveCount="4"
         swizzle-g="RED" swizzle-b="RED" />
<!-- Fonts -->
<font id="obelix"
      file="res/fonts/obelix.ttf"
      size="16" dpi="96" />
<!-- Cameras -->
<camera id="main-camera"
	fov="45.0" near="0.1" far="200.0"
	position="16.0,2.5,7.0"
	direction="-4.0,0.0,-1.0" />
<camera id="reflection-camera"
	type="reflection"
	camera="main-camera"
	mesh="reflector-mesh" />
<!-- Lights -->
<light id="spot-light0"
       type="SPOT" 
       position="3.0,8.0,4.0"
       direction="-0.37,-0.95,-0.46"
       diffuse="0.2,0.45,0.435"
       radius="10.0,21.0"
       cone-angles="11.5,25.5" />
<!-- Shadow Maps -->
<shadow-map id="sun-shadow"
	    light="earth-sky"
	    camera="main-camera"
	    size="2056"
	    pixel-size="24"
	    pixel-type="FLOAT"
	    num-layer="3"
	    split-weight="0.9" />
<shadow-map id="spot-shadow0"
	    light="spot-light0"
	    camera="main-camera"
	    size="1024"
	    pixel-size="24"
	    pixel-type="FLOAT" />
<!-- Some asset files. Assets can contain lights,materials and meshes. -->
<asset id="animation-asset"
       type="asset"
       file="res/models/psionic/dwarf/x/dwarf.x"
       texture-path="res/models/psionic/dwarf/x"
       use-animation="1"
       animation-force-states="1"
       animation-post-state="LINEAR"
       animation-pre-state="LINEAR"
       animation-tps="20.0">
  <!-- Optionally define named animation ranges. -->
  <anim-range name="complete"    range="0.0,360.0" />
  <anim-range name="run"         range="16.0,26.0" />
  <anim-range name="jump"        range="28.0,40.0" />
  <anim-range name="jumpSpot"    range="42.0,54.0" />
  <anim-range name="crouch"      range="56.0,59.0" />
  <anim-range name="crouchLoop"  range="60.0,69.0" />
  <anim-range name="getUp"       range="70.0,74.0" />
  <anim-range name="battleIdle1" range="75.0,88.0" />
  <anim-range name="battleIdle2" range="90.0,110.0" />
  <anim-range name="attack1"     range="112.0,126.0" />
  <anim-range name="attack2"     range="128.0,142.0" />
  <anim-range name="attack3"     range="144.0,160.0" />
  <anim-range name="attack4"     range="162.0,180.0" />
  <anim-range name="attack5"     range="182.0,192.0" />
  <anim-range name="block"       range="194.0,210.0" />
  <anim-range name="dieFwd"      range="212.0,227.0" />
  <anim-range name="dieBack"     range="230.0,251.0" />
  <anim-range name="yes"         range="253.0,272.0" />
  <anim-range name="no"          range="274.0,290.0" />
  <anim-range name="idle1"       range="292.0,325.0" />
  <anim-range name="idle2"       range="327.0,360.0" />
</asset>
<!-- Some meshes. -->
<mesh id="earth-sky"
      type="sky"
      preset="earth"
      day-length="0.8"
      max-elevation="20.0"
      min-elevation="-20.0"
      day-time="0.5" />
<mesh id="ground-mesh"
      type="rectangle"
      lod="0"
      rotation="0.0,0.0,3.1415"
      scaling="20.0,20.0,20.0"
      texco-scaling="7.0,7.0"
      use-normal="1"
      use-texco="1"
      use-tangent="1"
      center="1"
      usage="STATIC">
  <transform>
    <translate value="0.0,-2.0,0.0" />
  </transform>
</mesh>
<mesh id="reflector-mesh"
      type="rectangle"
      lod="0"
      rotation="0.0,0.0,3.1415926"
      scaling="10.0,1.0,20.0"
      use-normal="1"
      use-texco="1"
      use-tangent="0"
      center="1"
      usage="STATIC">
  <transform>
    <rotate value="0.0,1.5707963,0.0" />
    <translate value="-10.0,3.0,0.0" />
  </transform>
</mesh>
<mesh id="animation-mesh"
      type="asset"
      asset="animation-asset"
      asset-indices="*"
      asset-animation="1">
  <transform>
    <translate value="0.0,-2.0,0.0" />
    <rotate value="3.14,0.0,0.0" />
  </transform>
</mesh>
<mesh id="sphere-mesh"
      type="sphere"
      lod="4"
      scaling="2.5,2.5,2.5"
      texco-scaling="1.0,1.0"
      use-normal="1"
      use-tangent="0"
      usage="STATIC">
  <transform>
    <translate value="-14.0,1.0,0.0" />
    <rotate value="0.0,0.0,0.0" />
  </tranform>
</mesh>
<mesh id="logo-widget"
      type="rectangle"
      lod="0"
      rotation="1.57,0.0,0.0"
      scaling="90.0,1.0,23.0"
      texco-scaling="-1.0,1.0"
      use-normal="0"
      use-texco="1"
      use-tangent="0"
      center="0">
  <define key="INVERT_Y" value="TRUE" />
  <define key="INVERT_X" value="FALSE" />
  <transform>
    <translate value="8.0,-8.0,0.0" />
  </transform>
</mesh>
<mesh id="fps-widget"
      type="text"
      font="obelix"
      text="0 FPS"
      text-color="0.97,0.86,0.77,0.95">
  <transform>
    <translate value="8.0,8.0,0.0" />
  </transform>
</mesh>
<mesh id="debug-widget"
      type="rectangle"
      lod="0"
      rotation="1.57,0.0,3.1415"
      scaling="200.0,1.0,200.0"
      texco-scaling="1.0,1.0"
      use-normal="0"
      use-texco="1"
      use-tangent="0"
      center="0">
  <define key="INVERT_Y" value="TRUE" />
  <define key="INVERT_X" value="TRUE" />
  <transform>
    <translate value="0.0,-400.0,0.0" />
  </transform>
</mesh>

<mesh id="box-wall"
      type="box"
      scaling="10.0,1.0,0.5"
      use-normal="1"
      use-tangent="0"
      usage="STATIC">
  <material preset="silver" />
</mesh>
<mesh id="box-wall-1"
      type="box"
      scaling="6.0,1.0,0.5"
      use-normal="1"
      use-tangent="0"
      usage="STATIC">
  <material preset="silver" />
</mesh>
  
<!--**************************-->
<!--**************************-->

<node id="reflection-pass">
  <camera id="reflection-camera" />
  <fbo id="reflection-buffer" clear-buffers="0,1,2,3" clear-depth="1" />
  
  <node>
    <blend mode="src" />
    <depth test="1" write="1" />
    <fbo id="reflection-buffer" draw-buffers="0,2,3" />
    
    <node import="shadow-caster" />
    <node import="scene-geometry" />
  </node>
  
  <node>
    <fbo id="reflection-buffer" draw-buffers="1" />
    <node>
      <texture name="gDepthTexture" fbo="reflection-buffer" attachment="depth" />
      <texture name="gDiffuseTexture" fbo="reflection-buffer" attachment="0" />
      <texture name="gSpecularTexture" fbo="reflection-buffer" attachment="2" />
      <texture name="gNorWorldTexture" fbo="reflection-buffer" attachment="3" />
      <node import="shading-pass" />
    </node>
    <node import="background-pass" />
  </node>
  
  <node>
    <depth test="0" write="0" />
    <node id="volume-fog">
      <fbo id="reflection-buffer" draw-buffers="1" />
      <blend mode="add" />
      <texture name="gDepthTexture" fbo="reflection-buffer" attachment="depth" />
      <node import="volumetric-fog-pass" />
    </node>
  </node>
</node>

<node id="main-pass">
  <camera id="main-camera" />
  
  <node id="geometry-pass">
    <blend mode="src" />
    <depth test="1" write="1" />
    <fbo id="g-buffer" draw-buffers="0,2,3" />
    
    <node import="shadow-caster" shadow-maps="*" />
    <node import="scene-geometry" />
  </node>
  
  <node>
    <fbo id="g-buffer" draw-buffers="1" />
    <node>
      <texture name="gDepthTexture" fbo="g-buffer" attachment="depth" />
      <texture name="gDiffuseTexture" fbo="g-buffer" attachment="0" />
      <texture name="gSpecularTexture" fbo="g-buffer" attachment="2" />
      <texture name="gNorWorldTexture" fbo="g-buffer" attachment="3" />
      <node import="shading-pass" />
    </node>
    <!-- Render background (sky,...) -->
    <node import="background-pass" />
    <node id="reflector">
      <toggle key="CULL_FACE" value="0" />
      <input name="reflectionMatrix" state="reflection-camera" component="viewProjectionMatrix" />
      <texture name="colorTexture" fbo="reflection-buffer" attachment="1"
	       map-to="COLOR" mapping="PLANAR_REFLECTION" blend-mode="SRC" ignore-alpha="1" />
      <texture name="noiseTexture" id="reflector-noise" map-to="COLOR" blend-mode="MUL" />
      <material ambient="1.0,1.0,1.0" diffuse="0.0,0.0,0.0" />
      <define key="SHADING" value="NONE" />
      <mesh id="reflector-mesh" shader="regen.meshes.mesh" />
    </node>
    
    <node import="post-pass" />
  </node>
</node>

<node id="shadow-caster">
  <node id="dwarf-node" >
    <mesh id="animation-mesh" shader="regen.meshes.mesh" />
  </node>
  <node id="sphere-node" >
    <mesh id="sphere-mesh" shader="regen.meshes.mesh" />
  </node>
  
  <node id="box-wall0" >
    <transform>
      <translate value="0.5,-2.0,10.5" />
    </tranform>
    <mesh id="box-wall" shader="regen.meshes.mesh" />
  </node>
  <node id="box-wall1" >
    <transform>
      <translate value="0.5,-2.0,-10.5" />
    </tranform>
    <mesh id="box-wall" shader="regen.meshes.mesh" />
  </node>
  <node id="box-wall2" >
    <transform>
      <rotate value="1.57079632,0.0,0.0" />
      <translate value="10.0,-2.0,0.0" />
    </tranform>
    <mesh id="box-wall" shader="regen.meshes.mesh" />
  </node>
  <node>
    <transform>
      <rotate value="1.57079632,0.0,0.0" />
      <translate value="-11.0,-2.0,0.0" />
    </tranform>
    <mesh id="box-wall" shader="regen.meshes.mesh" />
  </node>
  <node id="box-wall3" >
    <transform>
      <rotate value="1.57079632,0.0,0.0" />
      <rotate value="0.0,1.57079632,0.0" />
      <translate value="-10.5,8.5,00.0" />
    </tranform>
    <mesh id="box-wall" shader="regen.meshes.mesh" />
  </node>
  <node id="box-wall5" >
    <transform>
      <rotate value="0.0,1.57079632,0.0" />
      <translate value="-10.5,3.0,10.5" />
    </tranform>
    <mesh id="box-wall-1" shader="regen.meshes.mesh" />
  </node>
  <node id="box-wall6" >
    <transform>
      <rotate value="0.0,1.57079632,0.0" />
      <translate value="-10.5,3.0,-10.5" />
    </tranform>
    <mesh id="box-wall-1" shader="regen.meshes.mesh" />
  </node>
</node>

<node id="scene-geometry">
  
  <node id="ground">
    <input type="float" name="reliefScale" value="0.03" />
    <input type="int" name="reliefLinearSteps" value="10" />
    <input type="int" name="reliefBinarySteps" value="2" />
    <texture name="colorTexture" id="ground-color" map-to="COLOR" texco-transfer="RELIEF" />
    <texture name="normalTexture" id="ground-normal" map-to="NORMAL" texco-transfer="RELIEF"
	     texel-transfer-key="regen.utility.textures.normalTBNTransfer" />
    <texture name="heightTexture" id="ground-height" />
    <material ambient="0.3,0.3,0.3" diffuse="0.7,0.7,0.7" />
    <mesh id="ground-mesh" shader="regen.meshes.mesh" />
  </node>
</node>

<node id="shading-pass">
  <blend mode="add" />
  <depth test="0" write="0" />
  <input type="vec3" name="lightAmbient" value="0.1,0.1,0.1" />
    
  <node>
    <fullscreen-pass shader="regen.shading.deferred.ambient" />
    
    <light-pass type="DIRECTIONAL"
		shader="regen.shading.deferred.directional"
		use-shadows="1"
		shadow-filter="NONE"
		shadow-layer="3">
      <light id="earth-sky" shadow-map="sun-shadow" />
    </light-pass>
    
    <light-pass type="SPOT"
		shader="regen.shading.deferred.spot"
		use-shadows="1"
		shadow-filter="NONE">
      <light id="spot-light0" shadow-map="spot-shadow0" />
    </light-pass>
  </node>
</node>

<node id="background-pass">
  <depth test="1" write="0" />
  
  <node id="sky-node">
    <define key="IGNORE_VIEW_TRANSLATION" value="TRUE" />
    <mesh id="earth-sky" />
  </node>
</node>

<!--**************************-->
<!--**************************-->

<node id="volumetric-fog-pass">
  <input type="float" name="shadowSampleStep" value="0.025" />
  <input type="float" name="shadowSampleThreshold" value="0.075" />
  <input type="vec2" name="fogDistance" value="0.0,100.0" />
  <define key="USE_TBUFFER" value="FALSE" />
      
  <node>
    <light-pass type="SPOT"
		shader="regen.shading.fog.volumetric.spot"
		use-shadows="1"
		shadow-filter="NONE">
      <light id="spot-light0" shadow-map="spot-shadow0" >
	<input type="float" name="fogExposure" value="1.0" />
	<input type="vec2" name="fogRadiusScale" value="0.44,0.76" />
	<input type="vec2" name="fogConeScale" value="1.0,1.0" />
      </light>
    </light-pass>
  </node>
</node>

<node id="post-pass">
  <depth test="0" write="0" />
  
  <node id="volume-fog">
    <fbo id="g-buffer" draw-buffers="1" />
    <blend mode="add" />
    <texture name="gDepthTexture" fbo="g-buffer" attachment="depth" />
    <node import="volumetric-fog-pass" />
  </node>
  
  <node id="fxaa">
    <fbo id="g-buffer" draw-buffers="0" />
    <texture name="inputTexture" fbo="g-buffer" attachment="1" />
    <input type="float" name="spanMax" value="8.0" />
    <input type="float" name="reduceMul" value="0.125" />
    <input type="float" name="reduceMin" value="0.0078125" />
    <input type="vec3" name="luma" value="0.299,0.587,0.114" />
    
    <fullscreen-pass shader="regen.post-passes.fxaa" />
  </node>
</node>

<!--**************************-->
<!--**************************-->

<node id="gui-pass">
  <blend mode="alpha" />
  <depth test="0" write="0" />
  <fbo id="g-buffer" draw-buffers="0" />
  
  <node id="logo-widget">
    <material alpha="0.7" />
    <texture id="regen-logo" map-to="COLOR" blend="SRC" />
    <mesh id="logo-widget" shader="regen.gui.widget" />
  </node>
  <!--
  <node id="debug-widget">
    <material alpha="1.0" />
    <texture fbo="reflection-buffer" attachment="1" map-to="COLOR" blend="SRC" ignore-alpha="1" />
    <mesh id="debug-widget" shader="regen.gui.widget" />
  </node>
  -->
  
  <node id="fps-widget">
    <mesh id="fps-widget" />
  </node>
</node>

<!--**************************-->
<!--**************************-->

<node id="root">
  <fbo id="g-buffer" clear-buffers="0,1,2,3" clear-depth="1" />
  
  <node id="pre-render">
    <node import="reflection-pass" />
  </node>
  <node import="main-pass" />
  <node import="gui-pass" />
  
  <node>
    <blit src-fbo="g-buffer" src-attachment="0" dst-fbo="SCREEN" />
  </node>
</node>
