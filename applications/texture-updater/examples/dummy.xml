<?xml version="1.0" encoding="UTF-8" ?>
<TextureUpdater
    name="simple draw"
    framerate="60"
    TIMESTEP="0.016666666"
>
    <buffers>
        <buffer name="output" components="3" count="1"
                pixelType="GL_UNSIGNED_BYTE" size="256,256" />
        <buffer name="obstacles" components="4" count="1"
                pixelType="GL_UNSIGNED_BYTE" size="256,256" />
        <buffer name="splat" file="res/textures/splats/ogle.png" />
    </buffers>
    <init>
        <operation
            shader="fluid.splat.border"
            clearColor="0.0,0.0,0.0,0.0"
            IGNORE_OBSTACLES="TRUE"
            in_splatBorder="1.0"
            in_splatValue="1.0,0.0,0.0,0.0"
            out="obstacles" />
        <operation
            shader="fluid.splat.rect"
            blend="add"
            IGNORE_OBSTACLES="TRUE"
            in_splatPoint="98.0,168.0"
            in_splatSize="70.0,30.0"
            in_splatValue="0.5,0.0,0.0,0.0"
            out="obstacles" />
        <operation
            shader="fluid.splat.tex"
            blend="add"
            IGNORE_OBSTACLES="TRUE"
            in_splatTexture="splat"
            in_texelFactor="1.0"
            out="obstacles" />
    </init>
    <loop>
        <operation
            shader="fluid.sample.scalar"
            blend="alpha"
            clearColor="1.0,1.0,1.0,1.0"
            in_quantity="obstacles"
            in_texelFactor="1.0"
            in_colorPositive="0.8,0.0,0.0"
            in_colorNegative="0.0,1.0,0.0"
            out="output" />
        <operation
            shader="fluid.splat.circle"
            blend="alpha"
            IGNORE_OBSTACLES="TRUE"
            in_splatPoint="53.0,142.0"
            in_splatRadius="28.0"
            in_splatValue="0.0,1.0,0.0,0.5"
            out="output" />
        <operation
            shader="fluid.splat.circle"
            blend="add"
            IGNORE_OBSTACLES="TRUE"
            in_splatPoint="79.0,125.0"
            in_splatValue="0.0,0.0,1.0,1.0"
            out="output" />
    </loop>
</texture-updater>

