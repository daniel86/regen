<?xml version="1.0" encoding="UTF-8" ?>
<texture-updater
    name="Mandelbrot"
    framerate="60"
    TIMESTEP="0.016666666"
>
    <buffers>
        <buffer name="output" components="3" count="1"
                pixelType="GL_UNSIGNED_BYTE" size="512,512" />
    </buffers>
    <loop>

      <operation
            fs="mandelbrot.fs"
            JULIA_SET="1"
            in_juliaConstants="-1.166,0.0021"
            in_maxIterations="100"
            in_center="-0.75,0.0"
            in_outerColor1="0.2,0.12,0.82"
            in_outerColor2="0.4,0.8,0.1"
            out="output" />

